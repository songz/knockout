<!DOCTYPE html>
<html lang="en">
<head>
  <title>WebRTC Demo - Video chatting in room <%= rid %></title>
  <% include _header_bootstrap3 %>
  <% include _font_franklin %>
  <link rel="stylesheet" href="/css/room.css" />
  <script src="//swww.tokbox.com/webrtc/v2.0/js/TB.min.js"></script>
  <script src="/js/layoutContainer.js" type="text/javascript"></script>
</head>
<body>

<div class="container">
  <% include _knockout_header %>

  <div class="container logo-container">
    <h1 class="ir event-logo">Node Knockout 2013 Live</h1>
    <h1 class="titleText">Room</h1>
    <h2 ><a class="opentok-logo ir" href="http://tokbox.com">Powered by OpenTok</a></h2>
  </div>

  <div class="container meatContainer">
      <div class="video-chat" id="streams_container">
        <div class="streamContainer" id="publisherContainer">
          <div id="myPublisher"></div>
        </div>
      </div>

      <div class="text-chat" id="chatroom">
        <div id="chatElementContainer">
          <div id="displayChat"><ul id=""></ul></div>
          <div id="chatInput">
            <input type="" id="messageInput" disabled/>
            <i class="icon-comments-alt"></i>
          </div>
        </div>
      </div>
  </div>

  <div class="container">
    <div class="filterContainer">
      <div class="filterOptions">
        <section>
        <h1>Filters: </h1>
        <h1 class="filterOption" data-value="Blur">Blur</h1>
        <h1 class="filterOption" data-value="Sepia">Sepia</h1>
        <h1 class="filterOption" data-value="Grayscale" >Grayscale</h1>
        <h1 class="filterOption" data-value="Invert" >Invert</h1>
        <h1 class="filterOption optionSelected" data-value="None">None</h1>
        </section>
        <section class="roomControls">
        <h1>Room Controls:</h1>
        <div class="roomOptions">
          <h1 class="roomOption publishOption">Publishing</h1>
          <h1 class="roomOption audioOption">Audio-Only</h1>
          <h1 class="roomOption textOption">Text-Only</h1>
        </div>
        </section>
      </div>

    </div>
  </div>

  <% include _knockout_footer %>

<script id="messageTemplate" type="text/x-handlebars-template">
<div class="chatMessage"><em>{{name}}: </em>{{{text}}}</div>
</script>

<script id="notifyTemplate" type="text/x-handlebars-template">
  <div class="chatEvent chatMessage"><em>{{message}}</em></div>
</script>

<script id="userStreamTemplate" type="text/x-handlebars-template">
  <div class="streamContainer {{id}}">
    <div id="{{id}}"></div>
    <div class="flagUser" data-streamconnection="{{id}}">Offensive User</div>
    <div class="userName">{{name}}</div>
  </div>
</script>

<script src="/js/room.js" type="text/javascript"></script>
<script type="text/javascript">
  new User("<%= rid %>", "<%= apiKey %>", "<%= sid %>", "<%= token %>");
</script>

<% include _analytics %>

</body>
</html>

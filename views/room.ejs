<!DOCTYPE html>
<html lang="en">
<head>
  <title>WebRTC Demo - Video chatting in room <%= rid %></title>
  <% include _header_bootstrap3 %>
  <% include _font_franklin %>
  <link rel="stylesheet" href="/css/room.css" />
  <link rel="stylesheet" href="/css/nav.css" />
  <script src="//swww.tokbox.com/webrtc/v2.0/js/TB.min.js"></script>
  <script src="/vendors/handlebars.js" type="text/javascript"></script>
  <script src="/js/layoutContainer.js" type="text/javascript"></script>
</head>
<body>

  <% include _knockout_header %>

  <div class="container logo-container">
    <h1 class="ir event-logo">Node Knockout 2013 Live</h1>
    <h2 class="ir opentok-logo"><a href="http://tokbox.com">Powered by OpenTok</a></h2>
  </div>

  <div class="container">
    <div class="row content-row">

      <div class="video-chat col-md-8" id="streams_container">
        <div class="streamContainer">
          <div id="myPublisher"></div>
        </div>
      </div>

      <div class="text-chat col-md-4" id="chatroom">
        <div id="chatElementContainer">
          <div id="displayChat"><ul id=""></ul></div>
          <div id="chatInput">
            <input type="" id="messageInput" disabled/>
            <i class="icon-comments-alt"></i>
          </div>
        </div>
      </div>

    </div>

    <div class="sponsors">
      <h3>Thanks to our Platinum Sponsors</h3>
      <ul class="list-inline">
        <li><a class="goinstant-logo ir" href="#">GoInstant</a></li>
        <li><a class="nodefirm-logo ir" href="#">The Node Firm</a></li>
        <li><a class="joyent-logo ir" href="#">Joyent</a></li>
        <li><a class="groupon-logo ir" href="#">Groupon</a></li>
      </ul>
    </div>

  </div>


<script id="messageTemplate" type="text/x-handlebars-template">
<div class="chatMessage"><em>{{name}}: </em>{{{text}}}</div>
</script>

<script id="notifyTemplate" type="text/x-handlebars-template">
  <div class="chatEvent chatMessage"><em>{{message}}</em></div>
</script>

<script id="userStreamTemplate" type="text/x-handlebars-template">
  <div class="streamContainer {{id}}">
    <div id="{{id}}"></div>
    <div class="flagUser" data-streamconnection="{{id}}">Offensive User</div>
  </div>
</script>

<script src="/js/room.js" type="text/javascript"></script>
<script type="text/javascript">
  new User("<%= rid %>", "<%= apiKey %>", "<%= sid %>", "<%= token %>");
</script>

<% include _analytics %>

</body>
</html>

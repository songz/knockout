<!DOCTYPE html>
<html lang="en">
<head>
  <title>Node Knockout Chat</title>
  <% include _header_bootstrap2 %>
  <link rel="stylesheet" href="/css/index.css" />
</head>
<body>
<div class="container">

  <div id="roomContainer">

    <h1>Node Knockout Chat</h1>

    <div id="infoBox">
      <input id="searchRoom" type="text" placeholder=""/>
      <div id="actionItem">Search Rooms</div>
      <div id="roomsContainer"></div>
      <hr />
    </div>

    <a href="#myModal" role="button" data-toggle="modal" id="createRoomButton">New Room</a>

  </div>
</div>

<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Create a Knockout Room</h3>
  </div>
  <div class="modal-body">
    <input id="roomName" type="text" placeholder="room name" />
    <textarea id="roomDescription" name="" rows="3" placeholder="room description"></textarea>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" id="submitRoomButton">Create Room</button>
  </div>
</div>

<script id="roomTemplate" type="text/x-handlebars-template">
  <div class="roomInformation" data-info="{{name}} {{description}}">
    <a href="{{url}}">
      <div class="roomName">{{name}}</div>
      <div class="roomDescription">{{description}}</div>
      <div class="usersCount">User Count: {{usersCount}}</div>
    </a>
  </div>
</script>

  <script src="/js/index.js" type="text/javascript"></script>
  <% include _analytics %>
</body>
</html>
